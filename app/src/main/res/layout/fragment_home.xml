<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/hijau_muda"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:layout_weight="1">
        </LinearLayout>
        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="0dp"
            android:layout_marginLeft="20dp"
            android:backgroundTint="@color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:elevation="10dp"
                android:layout_weight="1">
                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:src="@drawable/selada"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="Selada \nHijau"
                    android:layout_marginRight="20dp"
                    android:autoSizeTextType="uniform"
                    android:autoSizeMaxTextSize="35sp"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:gravity="center_vertical"
                    android:layout_weight="1"
                    android:fontFamily="@font/poppins_bold"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_weight="0.5">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Data Sensor"
            android:gravity="center"
            android:autoSizeMinTextSize="15sp"
            android:autoSizeMaxTextSize="27sp"
            android:autoSizeTextType="uniform"
            android:fontFamily="@font/poppins_bold"
            android:textColor="@color/black"
            android:layout_gravity="center"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:paddingLeft="20dp"
        android:paddingRight="20dp"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginRight="10dp"
                android:layout_weight="1">

                <!--                Nutrisi-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/containerNutrisi"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/hijau_tua"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/nutrisi"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Nutrisi"
                                android:layout_weight="1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="13sp"
                                android:autoSizeMinTextSize="10sp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/hijau_muda"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:gravity="center">
                            <TextView
                                android:id="@+id/tvNutrisi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:textSize="25sp"
                                android:fontFamily="@font/poppins_bold"
                                android:layout_weight="1"
                                android:text="-"
                                android:gravity="center"
                                android:paddingBottom="5dp"
                                android:layout_marginBottom="0dp"
                                android:textColor="@color/hijau_muda"
                                android:textStyle="bold"/>

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="PPM"
                                android:layout_weight="2"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="14sp"
                                android:autoSizeMinTextSize="10sp"
                                android:gravity="center"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/hijau_muda"
                                android:paddingLeft="10dp"/>
                        </LinearLayout>


                    </LinearLayout>
                </androidx.cardview.widget.CardView>
                <!--                PH-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/containerPH"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/hijau_tua"
                    android:layout_marginTop="10dp"
                    android:layout_marginBottom="10dp"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginLeft="10dp"
                                android:layout_marginRight="5dp"
                                android:layout_gravity="center"
                                android:src="@drawable/ph"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="pH"
                                android:layout_weight="1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="13sp"
                                android:autoSizeMinTextSize="10sp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/hijau_muda"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tvpH"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:textSize="25sp"
                            android:text="-"
                            android:fontFamily="@font/poppins_bold"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:gravity="center"
                            android:textColor="@color/hijau_muda"
                            android:textStyle="bold"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <!--                Suhu-->
                <androidx.cardview.widget.CardView
                    android:id="@+id/containerSuhu"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:backgroundTint="@color/hijau_tua"
                    android:layout_marginTop="10dp"
                    android:elevation="10dp"
                    android:layout_weight="1"
                    app:cardCornerRadius="20dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:paddingTop="0dp"
                            android:paddingBottom="2dp"
                            android:layout_gravity="top"
                            android:orientation="horizontal">

                            <ImageView
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_gravity="center"
                                android:layout_marginLeft="5dp"
                                android:layout_marginRight="5dp"
                                android:src="@drawable/suhu"/>
                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:text="Suhu"
                                android:layout_weight="1"
                                android:autoSizeTextType="uniform"
                                android:autoSizeMaxTextSize="13sp"
                                android:autoSizeMinTextSize="10sp"
                                android:gravity="center_vertical"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/hijau_muda"
                                android:paddingLeft="0dp"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1"
                            android:layout_marginBottom="10dp"
                            android:layout_gravity="bottom">
                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center"
                                android:orientation="vertical">
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginBottom="10dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="15dp"
                                        android:src="@drawable/suhu_ruangan"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginTop="12dp"
                                        android:layout_marginBottom="12dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="5dp"
                                        app:cardElevation="4dp"
                                        android:backgroundTint="@color/hijau_muda"
                                        android:layout_weight="1">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/suhuRuang"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:cardCornerRadius="20dp"
                                                android:layout_gravity="left"
                                                android:backgroundTint="@color/hijau_pastel"/>
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/tvSuhuRuang"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="13sp"
                                        android:text="20°C"
                                        android:gravity="center"
                                        android:textColor="@color/hijau_muda"
                                        android:fontFamily="@font/poppins_bold"/>
                                </LinearLayout>
                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:gravity="center"
                                    android:layout_weight="1"
                                    android:orientation="horizontal">
                                    <ImageView
                                        android:layout_width="15dp"
                                        android:layout_height="15dp"
                                        android:layout_marginBottom="13dp"
                                        android:layout_marginTop="10dp"
                                        android:layout_marginLeft="15dp"
                                        android:src="@drawable/suhu_air"/>
                                    <androidx.cardview.widget.CardView
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginBottom="12dp"
                                        android:layout_marginTop="12dp"
                                        app:cardCornerRadius="20dp"
                                        android:layout_marginRight="8dp"
                                        android:layout_marginLeft="5dp"
                                        app:cardElevation="4dp"
                                        android:backgroundTint="@color/hijau_muda"
                                        android:layout_weight="1">
                                        <LinearLayout
                                            android:layout_width="match_parent"
                                            android:layout_height="match_parent">
                                            <androidx.cardview.widget.CardView
                                                android:id="@+id/suhuAir"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent"
                                                app:cardCornerRadius="20dp"
                                                android:layout_gravity="left"
                                                android:backgroundTint="@color/hijau_pastel"/>
                                        </LinearLayout>
                                    </androidx.cardview.widget.CardView>
                                    <TextView
                                        android:id="@+id/tvSuhuAir"
                                        android:layout_width="wrap_content"
                                        android:layout_height="match_parent"
                                        android:textSize="13sp"
                                        android:text="20°C"
                                        android:gravity="center"
                                        android:textColor="@color/hijau_muda"
                                        android:fontFamily="@font/poppins_bold"/>
                                </LinearLayout>
                            </LinearLayout>
<!--                            <com.panik.siponik.ArcProgressView-->
<!--                                android:id="@+id/arcProgress"-->
<!--                                android:layout_width="70dp"-->
<!--                                android:layout_height="70dp"-->
<!--                                android:layout_marginTop="5dp"-->
<!--                                android:foregroundGravity="center"-->
<!--                                android:layout_gravity="center"/>-->
                        </LinearLayout>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/containerAir"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:backgroundTint="@color/hijau_tua"
                android:elevation="10dp"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                app:cardCornerRadius="20dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="25dp"
                        android:layout_marginTop="5dp"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="0dp"
                            android:src="@drawable/air"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="Ketinggian Air"
                            android:autoSizeTextType="uniform"
                            android:autoSizeMaxTextSize="12sp"
                            android:autoSizeMinTextSize="10sp"
                            android:gravity="center_vertical"
                            android:paddingRight="10dp"
                            android:fontFamily="@font/poppins_bold"
                            android:textColor="@color/hijau_muda"
                            android:paddingLeft="10dp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center|right"
                            android:layout_weight="1">
                            <TextView
                                android:id="@+id/tvTinggi"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:gravity="center|right"
                                android:text="- %"
                                android:autoSizeMaxTextSize="25sp"
                                android:autoSizeTextType="uniform"
                                android:fontFamily="@font/poppins_bold"
                                android:textColor="@color/hijau_muda"/>
                        </LinearLayout>
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center"
                            android:layout_weight="1">
                            <androidx.cardview.widget.CardView
                                android:id="@+id/cardViewContainer"
                                android:layout_width="50dp"
                                android:layout_height="match_parent"
                                app:cardCornerRadius="20dp"
                                android:backgroundTint="@color/hijau_muda"
                                app:cardElevation="20dp"
                                android:layout_marginTop="30dp"
                                android:layout_marginBottom="30dp">
                                <!--                                <com.example.siponik.waveView-->
                                <androidx.cardview.widget.CardView
                                    android:id="@+id/waterLevel"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_gravity="bottom"
                                    android:backgroundTint="@color/hijau_pastel"
                                    app:cardCornerRadius="20dp"/>

                            </androidx.cardview.widget.CardView>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>